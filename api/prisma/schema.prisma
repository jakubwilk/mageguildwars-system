generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id                      Int       @id @default(autoincrement())
  uid                     String    @unique @default(uuid())
  login                   String    @unique
  slug                    String    @unique
  email                   String    @unique
  password                String
  group                   UserGroup @default(USER)
  refreshToken            String?   @unique @default("")
  permissions             Permission[]
  isActive                Boolean   @default(false)
  isCreateProfileEnabled  Boolean   @default(true)
  isLocked                Boolean   @default(false)
  isGameMaster            Boolean   @default(false)
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @default(now())
}

model Profile {
  id              Int       @id @default(autoincrement())
  pid             String    @unique @default(uuid())
  uid             String
  name            String    @unique
  slug            String
  role            ProfileRole
  title           BaseTitle @default(MAGE)
  additionalTitle String    @default("")
  avatarUrl       String?   @default("https://i.imgur.com/6YnOpwt.png")
  signature       String?   @default("")
  permissions     Permission[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now())
}

model Permission {
  id          Int     @id @default(autoincrement())
  user        User    @relation(fields: [userId], references: [uid])
  userId      String
  profile     Profile @relation(fields: [profileId], references: [pid])
  profileId   String
  permission  String
}

enum UserGroup {
  BANNED
  USER
  MODERATOR
  OPERATOR
}

enum ProfileRole {
  NONE
  FAIRY_TAIL
  LAMIA_SCALE
  BLUE_PEGASUS
  GRIMOIRE_HEART
  RAVEN_TAIL
  ORACION_SEIS
  MAGIC_COUNCIL
  GAME_MASTER
  EVENT_MASTER
}

enum BaseTitle {
  MAGE
  MAGE_S_CLASS
  MAGE_SS_CLASS
  MASTER
  MEMBER_OF_MAGIC_COUNCIL
}
